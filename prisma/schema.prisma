// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  patients Patients[]
  Alert    Alert[]

  @@map("doctors")
}

model Patients {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  doctor_id String?
  doctor    Doctor? @relation(fields: [doctor_id], references: [id])
  alerts     Alert[]
  meals      Meal[]

  @@map("patients")
}

model Alert {
  id          String   @id @default(uuid())
  title       String
  description String
  created_at  DateTime @default(now())

  doctor_id String
  doctor    Doctor @relation(fields: [doctor_id], references: [id])

  patients_id String
  patient     Patients @relation(fields: [patients_id], references: [id])

  @@map("alerts")
}

model Meal {
  id          String   @id @default(uuid())
  title       String
  description String
  image_url   String
  ingredients Json[]
  created_at  DateTime @default(now())

  patient    Patients @relation(fields: [patient_id], references: [id])
  patient_id String

  @@map("meals")
}
