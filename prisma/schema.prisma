// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  patients     Patients[]
  doctorAlerts DoctorAlert[]
  PatientAlert PatientAlert[]

  @@map("doctors")
}

model Patients {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  doctor_id String?
  doctor    Doctor? @relation(fields: [doctor_id], references: [id])

  meals        Meal[]
  doctorAlerts DoctorAlert[]
  PatientAlert PatientAlert[]

  @@map("patients")
}

model DoctorAlert {
  id          String   @id @default(uuid())
  title       String
  description String
  created_at  DateTime @default(now())

  patient    Patients @relation(fields: [patient_id], references: [id])
  patient_id String

  doctor    Doctor @relation(fields: [doctor_id], references: [id])
  doctor_id String

  @@map("doctor_alerts")
}

model PatientAlert {
  id          String   @id @default(uuid())
  title       String
  description String
  created_at  DateTime @default(now())

  patient    Patients @relation(fields: [patient_id], references: [id])
  patient_id String

  doctor    Doctor @relation(fields: [doctor_id], references: [id])
  doctor_id String

  @@map("patient_alerts")
}

model Meal {
  id          String   @id @default(uuid())
  title       String
  description String
  image_url   String
  ingredients Json[]
  created_at  DateTime @default(now())

  patient    Patients @relation(fields: [patient_id], references: [id])
  patient_id String

  @@map("meals")
}
