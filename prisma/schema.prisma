// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  patients Patients[]
  Alert    Alert[]

  @@map("doctors")
}

model Patients {
  id          String @id @default(uuid())
  name        String
  lastName    String
  age         Int
  email       String
  username    String @unique
  password    String
  description String
  avatar_url  String

  created_at DateTime @default(now())

  doctor_id String?
  doctor    Doctor? @relation(fields: [doctor_id], references: [id])
  Alert     Alert[]

  @@map("patients")
}

model Alert {
  id          String   @id @default(uuid())
  title       String
  description String
  created_at  DateTime @default(now())

  doctor_id String
  doctor    Doctor @relation(fields: [doctor_id], references: [id])

  patients_id String
  patient     Patients @relation(fields: [patients_id], references: [id])

  @@map("alerts")
}
